<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.clinic.controller.RegisterController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtUsername" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Role:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="txtRole" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <PasswordField fx:id="txtPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Confirm Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <PasswordField fx:id="txtConfirmPassword" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button text="Back to Login" onAction="#goToLogin" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label fx:id="lblMessage" textFill="RED" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
</GridPane>
